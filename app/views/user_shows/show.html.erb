<div class="container">
<div class="row">
  <div class="col-xs-12 col-sm-6">
    <div class="user-show-lgposter-div" style="background-image: url(<%= image_path @usershow.show.lgposter %>);">
    <!--^ `image_path` will be replaced by `image_tag` when pulling form the backend-->
      <h1>UserShows#show</h1>
      <p>Find me in app/views/user_shows/show.html.erb</p>
      <div class="user-show-show-div">
        <%= @usershow.show.title %>
          <div>
        <i data-toggle="modal" data-target="#review-form" class="fa fa-comment-o fa-2x"></i>
        </div>


      </div><!--end of user-show-div-->
    </div><!--end of user-show-lgposter div-->

    </div><!-- end of col xs12 col sm8-->
    <div class="col-xs-12 col-sm-6">
      <div id="user-show-show-content">
        <h4><%= @usershow.show.title %></h4>
        <p id="user-show-show-content-summary"><%= @usershow.show.summary %></p>
        <div class="user-show-show-action-icons">
          <%= link_to user_shows_path do %>
            <i class="fa fa-caret-left fa-2x series-action-icons"></i>
          <% end %>
          <i data-toggle="modal" data-target="#review-form" class="fa fa-comment-o fa-2x series-action-icons"></i>
          <%= link_to leader_user_show_reviews_path(@usershow) do %>
            <i class="fa fa-trophy fa-2x series-action-icons"></i>
          <% end %>
        </div>
      </div>

      <div id="usershow-show-reviews-div">
        <% if @usershow.reviews.blank?  %>
        <% else %>
        <% @usershow.reviews.each do |review|  %>
          <%= render 'reviews/show', review: review %>
          <% end %>
        <% end %>
      </div><!--end of usershow-index-rev-div-->
    </div><!-- end of col xs12 col sm4-->


<div class="modal fade review-mod-style" id="review-form">
  <div class="modal-dialog" role="document"><!--aligns the modal document-->
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="review-modal-header">Review for '<%= @usershow.show.title %>'</h3>
      </div><!--end of header-->
      <div class="modal-body">
        <%= render "reviews/review_form", usershow: @usershow, review: @review %>
      </div><!--end of modal-body-->
    </div><!--end of modal-content-->
  </div><!--end of modal-dialog-->
</div><!--end of modal-->






  </div><!--end of row-->
</div><!--end of container-->
